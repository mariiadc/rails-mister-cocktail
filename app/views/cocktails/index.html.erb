<div class="container">
  <h1>Cocktails' List</h1>
</div>
<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/collection/962396/1600x900)">
    <%=cocktail.name%>
    </div>
  <% end %>
</div>
<div class="container">
  <%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-outline-success" %>
</div>
